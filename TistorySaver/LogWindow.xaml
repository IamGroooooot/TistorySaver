<Window x:Class="TistorySaver.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TistorySaver"
        mc:Ignorable="d"
        Title="Tistory Saver" Height="300" Width="450" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:LogWindowVM/>
    </Window.DataContext>
    <Grid>
        <ListView ItemsSource="{Binding LogList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="64" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Log" Width="350" DisplayMemberBinding="{Binding Log}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
